---
import { Image } from "astro:assets";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <p>{frontmatter.pubDate.toLocaleDateString()}</p>
    <p><em>{frontmatter.description}</em></p>
    <p>Ã‰crit par : {frontmatter.author}</p>
    <Image src={frontmatter.image.url} width="300" height="200" alt={frontmatter.image.alt} />
    <div class="flex flex-wrap gap-2 border-dotted border-1 border-b-gray-300 bg-amber-50 text-2xl">
        {
            frontmatter.tags.map((tag: string) => (
                <p class="tag">
                    <a class="text-blue-900" href={`/portfolio/tags/${tag}`}>
                        {tag}
                    </a>
                </p>
            ))
        }
    </div>
    <slot />
</BaseLayout>
